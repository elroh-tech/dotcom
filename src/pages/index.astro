---
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<div class="container">
  <Header />
  <Contact />
  <Footer />
</div>

<style>
  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden; /* Prevent any horizontal overflow */
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    min-height: 100vh;
    width: 100%;
    background: linear-gradient(to bottom, #2f3e3f, #4e5d5b); /* Muted dark tones */
  }
</style>
