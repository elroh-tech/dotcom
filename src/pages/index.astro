---
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<div class="container">
  <Header />
  <Contact />
  <Footer />
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    background: linear-gradient(to bottom, #2f3e3f, #4e5d5b); /* Subtle muted dark tones */
    padding: 3rem 0;
    min-height: 100vh;
  }
</style>
